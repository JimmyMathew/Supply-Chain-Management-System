<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SCM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../Images/apple-icon.png" />
    <link rel="icon" type="image/png" href="../Images/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap core CSS     -->
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />
    <!--  Material Dashboard CSS    -->
    <link href="../Content/material-dashboard.css?v=1.2.0" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="../Content/demo.css" rel="stylesheet" />

    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="../Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/buttons.dataTables.min.css" rel="stylesheet" />
    <!--     Fonts and icons     -->

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
    <!--   Core JS Files   -->

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="../Scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="../Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="../Scripts/material.min.js" type="text/javascript"></script>
    <!--  Charts Plugin -->
    <script src="../Scripts/chartist.min.js"></script>
    <!--  Dynamic Elements plugin -->
    <script src="../Scripts/arrive.min.js"></script>
    <!--  PerfectScrollbar Library -->
    <script src="../Scripts/perfect-scrollbar.jquery.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="../Scripts/bootstrap-notify.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="../Scripts/material-dashboard.js?v=1.2.0"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="../Scripts/demo.js"></script>
    <!--Datatables-->

    <script src="~/Scripts/jquery.dataTables.min.js"></script>




    <script src="~/Scripts/buttons.flash.min.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>
    <script src="~/Scripts/buttons.print.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/shortcut.js"></script>
    <style>
   
        h3 {
            margin-left: -52px;
        }
        .form-group.is-focused .form-control {
            outline: none;
            background-image: linear-gradient(#2860a4, #2860a4), linear-gradient(#D2D2D2, #D2D2D2);
            background-size: 100% 2px, 100% 1px;
            box-shadow: none;
            transition-duration: 0.3s;
            font-size: 20px;
        }

        .form-control, .form-group .form-control {
            border: 0;
            background-image: linear-gradient(#2860a4, #2860a4), linear-gradient(#D2D2D2, #D2D2D2);
            background-size: 0 2px, 100% 1px;
            background-repeat: no-repeat;
            background-position: center bottom, center calc(100% - 1px);
            background-color: transparent;
            transition: background 0s ease-out;
            float: none;
            box-shadow: none;
            border-radius: 0;
            font-weight: 400;
            font-size: 20PX;
        }
    </style>
    <script>
        $(document).ready(function () {
            shortcut.add("Ctrl+A", function () {
                printDialogOpen();
            });
            shortcut.add("Ctrl+1", function () {
                printOnDemand();
            });
            shortcut.add("Ctrl+2", function () {
                ScanGrossWeight();
            });
            shortcut.add("Ctrl+3", function () {
                ScanTareWeight();
            });

        });
        function ShowNotification(from, align, message) {
            color = 2;

            $.notify({
                icon: "notifications",
                message: message

            }, {
                    type: type[color],
                    timer: 4000,
                    placement: {
                        from: from,
                        align: align
                    }
                });
        }
        $(function () {
            history.pushState({ page: 1 }, "title1", "#nbb");
            window.onhashchange = function (event) {
                window.location.hash = "nbb";
            };
        });

    </script>
</head>
    <body>
        <div class="wrapper" style="top:-59px;">
            <div class="sidebar" data-color="blue" data-image="../assets/img/sidebar-1.jpg">
                <!--
                    Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                    Tip 2: you can also add an image using data-image tag
                -->
                <div class="logo">
                    <span class="simple-text"> SCM</span>
                


                </div>
                <div class="sidebar-wrapper">
                    <ul class="nav">
                        @{ var role = System.Web.HttpContext.Current.Session["role"].ToString();}
                        <li>
                            <a href="/Home/Index">
                                <img src="~/Images/blur_circular.png" />
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="/Manufacturer/Index">
                                <img src="~/Images/assignment.png" />
                                Manufacturer Unit
                            </a>
                        </li>

                        <li>
                            <a href="/Manufacturer/Distributor">
                                <img src="~/Images/assignment.png" />
                                Distributor Unit
                            </a>
                        </li>
                        <li>
                            <a href="/Manufacturer/Delivery">
                                <img src="~/Images/assignment.png" />
                                Delivery Unit
                            </a>
                        </li>
                        @{ if (role == "Admin")
                            {
                                <li>
                                    <a href="/Master/User">
                                        <img src="~/Images/accounts.png" />
                                        Users
                                    </a>
                                </li>
                                <li>
                                    <a href="/Master/Products">
                                        <img src="~/Images/local_parking.png" />
                                        Products
                                    </a>
                                </li>
                                <li>
                                    <a href="/Master/Holders">
                                        <img src="~/Images/person.png" />
                                        Stake Holders
                                    </a>
                                </li>
                            }
                        }
                        }
                    </ul>
                </div>
            </div>
            <div class="main-panel" style="overflow: inherit;">
                @RenderBody()
                <footer class="footer" style="margin-left: -65px;">
                    <div class="container-fluid">
                        @*<nav class="pull-left">
                            <ul>
                              { if (role == "Admin")
                                 @*{*@
                        <nav class="pull-left">
                            <ul>
                                <li>
                                    <a class="btn btn-primary pull-right" href="/Home/Logout" style="margin-left: 15px;">Sign out</a>
                                </li>
                            </ul>
                            <p class="copyright pull-right" style="padding: 15px 16px;">
                                &copy;
                                <script>
                                    document.write(new Date().getFullYear())
                                </script>
                                @{var version = "1.0";}
                                Supply Chain Management System - @version
                            </p>
                        </nav>
                      
                    </div>
                </footer>
            </div>
        </div>
    </body>
</body>
</html>
